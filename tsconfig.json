{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node", "jest", "@azure/functions"],
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
